@article{ ISI:000239013000005,
Author = {Gedalof, Ze'ev and Pellatt, Marlow and Smith, Dan J.},
Title = {{From prairie to forest: Three centuries of environmental change at Rocky
   Point, Vancouver Island, British Columbia}},
