@article{ ISI:000383670000022,
Author = {Cobb, Richard C. and Meentemeyer, Ross K. and Rizzo, David M.},
Title = {{Wildfire and forest disease interaction lead to greater loss of soil
   nutrients and carbon}},
Journal = {{OECOLOGIA}},
Year = {{2016}},
Volume = {{182}},
Number = {{1}},
Pages = {{265-276}},
Month = {{SEP}},
Abstract = {{Fire and forest disease have significant ecological impacts, but the
   interactions of these two disturbances are rarely studied. We measured
   soil C, N, Ca, P, and pH in forests of the Big Sur region of California
   impacted by the exotic pathogen Phytophthora ramorum, cause of sudden
   oak death, and the 2008 Basin wildfire complex. In Big Sur, overstory
   tree mortality following P. ramorum invasion has been extensive in
