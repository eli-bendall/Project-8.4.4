@article{ ISI:A1991EU61500014,
Author = {FLINT, EP and RICHARDS, JF},
Title = {{HISTORICAL-ANALYSIS OF CHANGES IN LAND-USE AND CARBON STOCK OF
   VEGETATION IN SOUTH AND SOUTHEAST-ASIA}},
