@inproceedings{ ISI:000309564600018,
Author = {Bren, Leon},
Editor = {{Webb, AA and Bonell, M and Bren, L and Lane, PNJ and McGuire, D and Neary, DG and Nettles, J and Scott, DF and Stednick, JD and Wang, YH}},
Title = {{Hydrologic impact of tire on the Croppers Creek paired catchment
