@article{ ISI:000342244500007,
Author = {Hekkala, Anne-Maarit and Tarvainen, Oili and Tolvanen, Anne},
Title = {{Dynamics of understory vegetation after restoration of natural
   characteristics in the boreal forests in Finland}},
