@article{ ISI:000306612800013,
Author = {Veilleux-Nolin, Melanie and Payette, Serge},
Title = {{Influence of recent fire season and severity on black spruce
   regeneration in spruce-moss forests of Quebec, Canada}},
Journal = {{CANADIAN JOURNAL OF FOREST RESEARCH}},
Year = {{2012}},
Volume = {{42}},
Number = {{7}},
