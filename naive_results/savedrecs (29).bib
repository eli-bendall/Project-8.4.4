@article{ ISI:A1994NE82900003,
Author = {CLARK, JS and ROYALL, PD},
Title = {{PREINDUSTRIAL PARTICULATE-EMISSIONS AND CARBON SEQUESTRATION FROM
   BIOMASS BURNING IN NORTH-AMERICA}},
Journal = {{BIOGEOCHEMISTRY}},
Year = {{1994}},
Volume = {{24}},
Number = {{1}},
Pages = {{35-51}},
Abstract = {{Spatial trends in pre-industrial biomass burning emissions for eastern
   North America were reconstructed from sediment charcoal data. 
   Petrographic thin sections were prepared from varved lake sediments
   along a transect of sites extending from NW Minnesota eastward to NE
   Maine.  Results showed an exponential decline in charcoal abundance with
   distance east from the prairie/forest border.  This result quantifies
   burning along the broad climate/vegetation gradient from xeric woodland
   to mesic eastern deciduous forest.  Post-settlement charcoal
   accumulation showed no such geographic pattern, varying from
   site-to-site, likely reflecting local variability in land use and
   combustion sources.  Results suggest the total emissions of large (> 10
   mum diameter) charcoal particles decreased by a factor of three during
   the twentieth century.}},
