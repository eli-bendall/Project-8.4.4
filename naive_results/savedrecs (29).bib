@article{ ISI:000382538400008,
Author = {Brown, Julian and York, Alan and Christie, Fiona},
Title = {{Fire effects on pollination in a sexually deceptive orchid}},
Journal = {{INTERNATIONAL JOURNAL OF WILDLAND FIRE}},
