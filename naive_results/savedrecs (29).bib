Title = {{Nitrogen and carbon dynamics of storm runoff in three sub-arctic streams}},
Booktitle = {{WATER RESOURCES IN EXTREME ENVIRONMENTS, PROCEEDINGS}},
Series = {{AMERICAN WATER RESOURCES ASSOCIATION TECHNICAL PUBLICATION SERIES}},
Year = {{2000}},
