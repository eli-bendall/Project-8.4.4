@article{ ISI:000251094300006,
Author = {Noel, Jill M. and Fowler, Norma L.},
Title = {{Effects of fire and neighboring trees on Ashe juniper}},
Journal = {{RANGELAND ECOLOGY \& MANAGEMENT}},
