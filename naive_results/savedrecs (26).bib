@article{ ISI:000320752500006,
Author = {Kribeche, Haroun and Bautista, Susana and Gimeno, Teresa and Blade,
   Carmen and Ramon Vallejo, Victoriano},
Title = {{Evaluating the Effectiveness of Post Fire Emergency Rehabilitation
   Treatments on Soil Degradation and Erosion Control in Semi-Arid
