@article{ ISI:000443644500001,
Author = {Nikolopoulos, Efthymios I. and Destro, Elisa and Bhuiyan, Md Abul Ehsan
   and Borga, Marco and Anagnostou, Emmanouil N.},
Title = {{Evaluation of predictive models for post-fire debris flow occurrence in
   the western United States}},
