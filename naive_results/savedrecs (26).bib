@inproceedings{ ISI:000171527100077,
Author = {Rodriguez, F and Bautista, S},
Editor = {{Villacampa, Y and Brebbia, CA and Uso, JL}},
Title = {{Patch-gap analysis of presence-absence data in vegetation transects
   using hidden Markov models, with application to the characterisation of
   post-fire plant pattern disturbance in a semiarid pine forest.}},
Booktitle = {{ECOSYSTEMS AND SUSTAINABLE DEVELOPMENT III}},
Series = {{ADVANCES IN ECOLOGICAL SCIENCES}},
Year = {{2001}},
Volume = {{10}},
Pages = {{801-809}},
Note = {{3rd International Conference on Ecosystems and Sustainable Developments,
   UNIV ALICANTE, ALICANTE, SPAIN, JUN 06-08, 2001}},
Organization = {{Wessex Inst Technol; Minist Ciencia \& Technol; Consejo Social Univ
   Alicante; Gen Valenciana; Diputac Provincial Alicante; Ayuntamiento
   Alicante}},
Abstract = {{We discuss the application of hidden Markov models (HMMs) to estimate
   the distributions of patch and gap sizes from vegetation transects with
   presence-absence data. Different models of HMMs are considered. A first
   basic model, expected to be appropriate for vegetation communities with
   simple pattern structure and relatively homogeneous patches and gaps,
   consists of two hidden states, patch and gap, and two symbols,
   corresponding to presence or absence of vegetation. When the spatial
