@article{ ISI:000340038700012,
Author = {Vlassova, Lidia and Perez-Cabello, Fernando and Rodrigues Mimbrero,
   Marcos and Montorio Lloveria, Raquel and Garcia-Martin, Alberto},
Title = {{Analysis of the Relationship between Land Surface Temperature and
