@inproceedings{ ISI:000171527100015,
Author = {Stalter, R and Munir, A and Lamont, EE and Kincaid, D},
Editor = {{Villacampa, Y and Brebbia, CA and Uso, JL}},
Title = {{Plant biodiversity in an urban wildlife refuge of New York City}},
Booktitle = {{ECOSYSTEMS AND SUSTAINABLE DEVELOPMENT III}},
Series = {{ADVANCES IN ECOLOGICAL SCIENCES}},
Year = {{2001}},
Volume = {{10}},
Pages = {{139-148}},
Note = {{3rd International Conference on Ecosystems and Sustainable Developments,
