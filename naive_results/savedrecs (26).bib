@article{ ISI:000330202600012,
Author = {Malowerschnig, Bodo and Sass, Oliver},
Title = {{Long-term vegetation development on a wildfire slope in Innerzwain
   (Styria, Austria)}},
Journal = {{JOURNAL OF FORESTRY RESEARCH}},
Year = {{2014}},
Volume = {{25}},
Number = {{1}},
Pages = {{103-111}},
Month = {{MAR}},
Abstract = {{Forest fires in mountainous areas can cause severe deforestation which
