@article{ ISI:000484311000036,
Author = {LaMalfa, Eric M. and Kimuyu, Duncan M. and Sensenig, Ryan L. and Young,
   Truman P. and Riginos, Corinna and Veblen, Kari E.},
Title = {{Tree resprout dynamics following fire depend on herbivory by wild
