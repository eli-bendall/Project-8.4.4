@article{ ISI:000257553400002,
Author = {Matlack, Raymond S. and Kaufman, Donald W. and Kaufman, Glennis A.},
Title = {{Influence of woody vegetation on small mammals in tallgrass prairie}},
Journal = {{AMERICAN MIDLAND NATURALIST}},
Year = {{2008}},
Volume = {{160}},
Number = {{1}},
Pages = {{7-19}},
Month = {{JUL}},
Abstract = {{We examined response of small mammals to woody invasion of tallgrass
   prairie in northeastern Kansas by sampling sites that ranged front 0 to
   100\% in woody cover (i.e., frequently burned prairie to unburned
   closed-canopy gallery forest; woody coverage mapped from satellite
   imagery). Abundance and biomass of small mammals initially increased
   with increasing wood), vegetation, but then decreased to their lowest
   level at. 100\% woody cover. Richness was greatest (all average of seven
   species) where woody cover was <= 17\% and decreased to one species
   where woody cover was 100\%. Abundance of white-footed mice (Peromyscus
   leucopus) increased as woody cover increased from 0 to 62\% cover, but
   decreased in forested sites (100\% cover). Abundance of western harvest
   mice (Reithrodontomys megalotis) decreased its woody cover increased;
   they were not recorded ill forested sites. Deer mice (P. maniculatus)
   were present in sites with no to low levels of woody vegetation, but
   were absent in sites with moderate to high levels of woody cover. The 11
   species captured were recorded in sites that had little woody vegetation
   (<= 17\% cover), whereas only seven species were captured at sites where
   considerable woody vegetation (>= 28\% cover) occurred. Even
   white-footed mice and eastern woodrats, which are considered woodland
   forms, decreased in abundance or were absent from forested sites.
   Overall, the results demonstrate that even relatively small amounts of
   woody vegetation in prairie landscapes call alter abundance, biomass and
   species richness and composition of small mammal communities.}},
DOI = {{10.1674/0003-0031(2008)160{[}7:IOWVOS]2.0.CO;2}},
