@inproceedings{ ISI:000177912100021,
Author = {Haim, A},
Editor = {{Trabaud, L and Prodon, R}},
Title = {{Fire size and location in forest restoration: the use of small mammal
   community structure for bioindication}},
Booktitle = {{FIRE AND BIOLOGICAL PROCESSES}},
Year = {{2002}},
Pages = {{249-254}},
Note = {{3rd International Workshop on Fire Ecology, BANYULS-SUR-MER, FRANCE, OCT
   22-26, 2001}},
Abstract = {{Resilience to fire of small mammal communities after large-scale fires
   is through succession, which includes three different main stages. In
   December 1999 a mixed pine forest on Mount Carmel, Israel, was set on
   fire. The burned area was about 15\% of a larger fire occurred in 1989,
   and was monitored for several years. As the two areas were very close (1
   km away) with similar environmental conditions, it was possible to study
   the effects of fire size and location by comparing the results with
   those obtained from the 1989 fire, using similar methods. A total of
   four plots, of 5000 m(2) each, two in the post fire habitat, and two
   unburned control plots were monitored during the years 2000 and 2001.
   In the burned plots relatively fewer small mammals were captured,
   compared with the control plots. While the only monitored species in the
   control plots were the two wood-mice of the genus Apodemus, A.
   mystacinus (75\%) and A. flavicollis (25\%), the species in the burned
   plots were A. flavicollis (66.6\%) and the common spiny mouse Acomys
   cahirinus (33.3\%). These results suggest that after fires of small size
   not all stages of succession appear. ``Islands{''} of forest saved
   during fighting the fire, may avoid a complete succession and accelerate
   the restoration of the small mammal community.}},
ISBN = {{90-5782-116-8}},
Unique-ID = {{ISI:000177912100021}},
