Title = {{QUANTIFYING BIOMASS OF SECONDARY FOREST AFTER SLASH-AND-BURN CULTIVATION
   IN CENTRAL MENABE, MADAGASCAR}},
Journal = {{JOURNAL OF TROPICAL FOREST SCIENCE}},
Year = {{2012}},
