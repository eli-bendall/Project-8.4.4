@article{ ISI:000380965200015,
Author = {Malvar, Maruxa C. and Prats, Sergio A. and Nunes, Joao P. and Keizer,
   Jan J.},
Title = {{SOIL WATER REPELLENCY SEVERITY AND ITS SPATIO-TEMPORAL VARIATION IN
