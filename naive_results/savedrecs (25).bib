@article{ ISI:000435780500081,
Author = {Markovic, S. M. and Nikolic, M. B. and Zlatkovic, K. B. and Nikolic, S.
   D. and Rakonjac, B. Lj and Stankov-Jovanovic, V, P. and Djokic, M. M.
