@article{ ISI:000338623400001,
Author = {Valentine, Leonie E. and Fisher, Rebecca and Wilson, Barbara A. and
   Sonneman, Tracy and Stock, William D. and Fleming, Patricia A. and
   Hobbs, Richard J.},
Title = {{Time since fire influences food resources for an Carnaby's cockatoo, in
