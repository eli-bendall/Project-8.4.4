@inproceedings{ ISI:000519270606213,
Author = {Zhao, Feng and Meng, Ran and Gu, Huan and Serbin, Shawn},
Book-Group-Author = {{IEEE}},
Title = {{ASSESSING POST-FIRE TREE MORTALITY AND BIOMASS CHANGE BY INTEGRATING
