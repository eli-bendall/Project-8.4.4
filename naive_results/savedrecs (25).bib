@article{ ISI:000271163500012,
Author = {Hanson, Chad T. and North, Malcolm P.},
Title = {{Post-fire survival and flushing in three Sierra Nevada conifers with
   high initial crown scorch}},
Journal = {{INTERNATIONAL JOURNAL OF WILDLAND FIRE}},
Year = {{2009}},
Volume = {{18}},
Number = {{7}},
Pages = {{857-864}},
Abstract = {{With growing debate over the impacts of post-fire salvage logging in
   conifer forests of the western USA, managers need accurate assessments
   of tree survival when significant proportions of the crown have been
   scorched. The accuracy of fire severity measurements will be affected if
   trees that initially appear to be fire-killed prove to be viable after
   longer observation. Our goal was to quantify the extent to which three
   common Sierra Nevada conifer species may `flush' (produce new foliage in
   the year following a fire from scorched portions of the crown) and
   survive after fire, and to identify tree or burn characteristics
   associated with survival. We found that, among ponderosa pines (Pinus
   ponderosa Dougl. ex. Laws) and Jeffrey pines (Pinus jeffreyi Grev. \&
   Balf) with 100\% initial crown scorch (no green foliage following the
   fire), the majority of mature trees flushed, and survived. Red fir
   (Abies magnifica A. Murr.) with high crown scorch (mean = 90\%) also
   flushed, and most large trees survived. Our results indicate that, if
   flushing is not taken into account, fire severity assessments will tend
   to overestimate mortality and post-fire salvage could remove many large
   trees that appear dead but are not.}},
DOI = {{10.1071/WF08129}},
ISSN = {{1049-8001}},
ResearcherID-Numbers = {{North, Malcolm/AAW-8897-2020}},
