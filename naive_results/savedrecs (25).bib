Editor = {{Kepner, WG and Rubio, JL and Mouat, DA and Pedrazzini, F}},
Title = {{Restoration of burned areas in forest management plans}},
Booktitle = {{DESERTIFICATION IN THE MEDITERRANEAN REGION. A SECURITY ISSUE}},
