@article{ ISI:000407093800015,
Author = {Stawski, Clare and Hume, Taylor and Kortner, Gerhard and Currie, Shannon
   E. and Nowack, Julia and Geiser, Fritz},
Title = {{Post-fire recovery of torpor and activity patterns of a small mammal}},
Journal = {{BIOLOGY LETTERS}},
Year = {{2017}},
Volume = {{13}},
Number = {{5}},
Month = {{MAY}},
Abstract = {{To cope with the post-fire challenges of decreased availability of food
   and shelter, brown antechinus (Antechinus stuartit), a small marsupial
   mammal, increase the use of energy-conserving torpor and reduce
   activity. However, it is not known how long it takes for animals to
   resume pre-fire torpor and activity patterns during the recovery of
   burnt habitat. Therefore, we tested the hypothesis that antechinus will
   adjust torpor use and activity after a fire depending on vegetation
   recovery. We simultaneously quantified torpor and activity patterns for
   female antechinus from three adjacent areas: (i) the area of a
   management burn 1 year post-fire, (ii) an area that was burned 2 years
   prior, and (iii) a control area. In comparison to shortly after the
   management burn, antechinus in all three groups displayed less frequent
   and less pronounced torpor while being more active. We provide the first
   evidence that only 1 year post-fire antechinus resume pre-fire torpor
   and activity patterns, probably in response to the return of herbaceous
   ground cover and foraging opportunities.}},
