@article{ ISI:000438946000008,
Author = {Grant-Hoffman, Madeline N. and Lincoln, Anna and Dollerschell, Ames},
Title = {{Post-Fire Native Seed Use in Western Colorado: A Look at Burned and
   Unburned Vegetation Communities}},
