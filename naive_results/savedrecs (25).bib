Title = {{Tree Planting: How Fast Can It Accelerate Post-fire Forest Restoration?
   - A Case Study in Northern Da Hinggan Mountains, China}},
Journal = {{CHINESE GEOGRAPHICAL SCIENCE}},
Year = {{2010}},
Volume = {{20}},
